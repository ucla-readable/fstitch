OBJDIRS += fs

# ufs.img is largely a sparse file
$(OBJDIR)/fs/ufs.img: fs/ufs-clean.img.gz
	@echo + mk $(OBJDIR)/fs/ufs.img
	@mkdir -p $(@D)
	$(V)util/gunzip_sparse fs/ufs-clean.img.gz $(OBJDIR)/fs/ufs.img

# ext2.img is largely a sparse file
$(OBJDIR)/fs/ext2.img: fs/ext2-clean.img.gz
	@echo + mk $(OBJDIR)/fs/ext2.img
	@mkdir -p $(@D)
	$(V)util/gunzip_sparse fs/ext2-clean.img.gz $(OBJDIR)/fs/ext2.img
