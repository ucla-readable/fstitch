#!/bin/bash

BENCHDIR="`dirname "$0"`"
. $BENCHDIR/common
KUDOSDIR="$BENCHDIR/.."
TESTS="tests"
OUTDIR="test"

function usage () {
	echo "About: create a new kudos test directory"
	echo "Usage: `basename "$0"` [-f INITFS] [-h INITHOST] [-n NAME]"
}

FS=ext2
HOST=kudos
NAME=

while getopts "f:h:n:" flag; do
	case "$flag" in
		f) FS="$OPTARG";;
		h) HOST="$OPTARG";;
		n) NAME="$OPTARG";;
		\?) usage 1>&2; exit 1;;
		*) usage 1>&2; exit 1;;
	esac
done

if ! supported_host_fs "${HOST}-${FS}"; then
	echo "Unsupported host-filesystem pair \"${HOST}-${FS}\"" 1>&2
	exit 1
fi

NEWTEST=`date --iso=seconds`

cd $KUDOSDIR
[ -d $TESTS ] || try mkdir $TESTS
try mkdir $TESTS/$NEWTEST
try rm -f $OUTDIR
try ln -s $TESTS/$NEWTEST $OUTDIR

echo "$HOST" > $OUTDIR/host
echo "$FS" > $OUTDIR/fs
echo "$NAME" > $OUTDIR/name
uname -a > $OUTDIR/uname
svnversion . > $OUTDIR/svnversion
svn diff > $OUTDIR/diff
