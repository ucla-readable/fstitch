#/bin/bash

FILES="fs/exec.c fs/Kconfig fs/fsttich/Kconfig fs/fsttich/fsttich_proc.c fs/fsttich/Makefile fs/Makefile include/linux/fsttich_proc.h kernel/exit.c kernel/fork.c"

if [ $# -ne 1 ]; then
	echo "About: Create a feathersttich proc diff" 1>&2
	echo "Usage: `basename "$0"` <LINUS_KERNEL_VERSION>" 1>&2
	echo "       e.g. `basename "$0"` 2.6.19.1" 1>&2
	exit 1
fi
KV=$1

for FILE in $FILES
do
  echo "diff -Nrud linux-$KV/$FILE linux-$KV/$FILE"
  diff -Nrud linux-$KV/$FILE linux-$KV-fsttich/$FILE \
	  | sed "s/linux-$KV-fsttich/linux-$KV/"
done
