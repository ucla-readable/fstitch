include lib/net/Makefrag

LIB_OBJFILES := $(patsubst lib/%.c, $(OBJDIR)/user/%.o, $(LIB_SRCFILES))
LIB_OBJFILES := $(patsubst lib/%.S, $(OBJDIR)/user/%.o, $(LIB_OBJFILES))

$(OBJDIR)/user/libuser.a: $(LIB_OBJFILES)
	@echo + ar $@
	$(V)$(AR) r $@ $(LIB_OBJFILES)

